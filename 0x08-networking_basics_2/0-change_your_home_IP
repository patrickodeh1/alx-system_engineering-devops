#!/usr/bin/env bash
# Script to change IP configurations for localhost and facebook.com

# Check if script is running in Docker
if grep -q "docker" /proc/1/cgroup; then
    # Modify /etc/hosts to map localhost to 127.0.0.2 and facebook.com to 8.8.8.8
    sudo sed -i 's/^127.0.0.1.*/127.0.0.2 localhost/' /etc/hosts
    sudo sed -i 's/^8.8.8.8.*/8.8.8.8 facebook.com/' /etc/hosts

    echo "IP configurations updated successfully."
else
    echo "This script should be run within Docker environment."
    exit 1
fi
